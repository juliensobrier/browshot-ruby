source "http://rubygems.org"
# Dependencies required to use browshot

group :runtime do
  gem "json", ">= 0"
  gem "url", ">= 0"
end

# Dependencies to develop browshot
group :development do
  gem "json", ">= 0"
  gem "url", ">= 0"
  gem "shoulda", ">= 0"
  gem "bundler", "~> 1.0.0"
  gem "jeweler", "~> 1.6.4"
  gem "rcov", ">= 0"
end
